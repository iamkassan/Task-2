 <h1>Books</h1>
 
<table>
  <thead>
  <tr>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
   <% @books.each do |book| %>
  <tr>
    <span><th><%= book.title %></th> </span>
    <span><th><%= book.body %> </th></span>
    <th><%= link_to "show","/books/#{book.id}" %></th>
    <th><%= link_to "edit",edit_book_path(book.id) %></th>
  </tr>
  <% end %>

</table>
  <h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <%= form_with model: @book do |f| %>
<h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
<div class="actions">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>