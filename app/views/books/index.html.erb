<p id="notice"></p>
<h1>Books</h1>
 
<table>
  <thead>
  <tr>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </tr>  
  </thead>
   <% @books.each do |book| %>
  <tr>
    <span><th><%= book.title %></th> </span>
    <span><th><%= book.body %> </th></span>
    <th><%= link_to "Show","/books/#{book.id}" %></th>
    <th><%= link_to "Edit",edit_book_path(book.id) %></th>
    <th><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></th>
  </tr>
  <% end %>
</table>
 <h2>New book</h2>
 <%= form_with model: @book do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>