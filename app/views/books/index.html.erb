<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>  
   <% @books.each do |book| %>
  
  <tr>
    <span><th><%= book.title %></th> </span>
    <span><th><%= book.body %> </th></span>
    <th><%= link_to "show","/books/#{book.id}" %></th>
    <th><%= link_to "edit",edit_book_path(book.id) %></th>
  </tr>
  <% end %>
  </thead>
</table>
 <%= form_with model: @book do |f| %>
<h2>New book</h2>

<h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  
<% end %>